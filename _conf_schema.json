{
    "max_history_count": {
        "description": "一个群聊最多记录的历史消息条数",
        "type": "int",
        "default": 1000,
        "hint": "推荐不少于1000",
        "obvious_hint": true
    },
    "prompt_config": {
        "description": "LLM引导词设置",
        "type": "object",
        "items": {
            "system_prompt": {
                "description": "系统引导词",
                "type": "string",
                "hint": "等同于Astrbot中的人格"
            },
            "chat_prompt": {
                "description": "聊天引导词",
                "type": "string",
                "hint": "位于聊天记录后面的，引导LLM的话语"
            }
        }
    },
    "check_chat_config": {
        "description": "主动发言时机设置",
        "type": "object",
        "items": {
            "to_check": {
                "description": "检测发言时机方式",
                "type": "string",
                "default": "消息个数",
                "options": ["消息个数", "LLM判断"]
            },
            "min_gap_time": {
                "description": "最小发言间隔（单位为秒）",
                "type": "int",
                "default": 3,
                "hint": "若设置过小则会导致请求数过多！",
                "obvious_hint": true
            },
            "message_count": {
                "description": "触发发言消息个数设置",
                "type": "object",
                "hint": "真实触发消息个数等概率在范围内随机",
                "obvious_hint": true,
                "items": {
                    "msg_min": {
                        "description": "最小值",
                        "type": "int",
                        "hint": "应为正整数，且最小值小于等于最大值"
                    },
                    "msg_max": {
                        "description": "最大值",
                        "type": "int",
                        "hint": "应为正整数，且最小值小于等于最大值"
                    }
                }
            },
            "message_LLM": {
                "description": "判断触发消息引导词",
                "type": "string",
                "hint": "位于聊天记录后面的，引导LLM的话语"
            }
        }
    }
}